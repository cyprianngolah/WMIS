<div class="col-md-6">
	<form role="form">
	    <div class="form-group">
	        <label for="username">Username</label>
	        <input type="text" class="form-control" id="username" name="username" data-bind="value: username, valueUpdate: 'keyup'">
	    </div>
	    <div class="form-group">
	        <label for="firstName">First Name</label>
	        <input type="text" class="form-control" id="firstName" name="firstName" data-bind="value: firstName, valueUpdate: 'keyup'">
	    </div>
	    <div class="form-group">
	        <label for="lastName">Last Name</label>
	        <input type="text" class="form-control" id="lastName" name="lastName" data-bind="value: lastName, valueUpdate: 'keyup'">
	    </div>
        <div class="form-group">
            <input type="checkbox" id="administratorProjects" data-bind="checked: administratorProjects" />
            <label for="administratorProjects">Administrator Projects</label>
        </div>
        <div class="form-group">
            <input type="checkbox" id="administratorBiodiversity" data-bind="checked: administratorBiodiversity" />
            <label for="administratorBiodiversity">Administrator Biodiversity</label>
        </div>
        
        <div class="form-group" data-bind="if: isLoadedForEditing">
            <label for="projects">Project(s) Editing</label>
            <input type="hidden" class="form-control" id="projects" name="projects" data-bind="valueObservable: projects, select2KeyValueTags: projectOptions" />
        </div>

	    <div class="text-right">
			<button type="submit" class="btn btn-primary" data-bind="click: save, enabled: canSave">Save</button>
			<a href="/User/Index" class="btn btn-default">Cancel</a>
		</div>
	</form>
</div>