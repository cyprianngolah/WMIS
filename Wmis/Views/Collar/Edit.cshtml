@{
    ViewBag.Title = "Collar";
	ViewBag.SubTitle = "<span data-bind='with: collar'><span data-bind='text: name'></span></span>";
}

@section TopRight{
    <div class="h4 pull-right" style="text-align: right; margin:0;" data-bind="with: collar">
        <span data-bind="with: collarState">Collar State: <strong><span data-bind="text: name"></span></strong><br /></span>
        <span data-bind="with: collarRegion">Collar Region: <strong><span data-bind="text: name"></span></strong><br /></span>
        <span class="h5">Last Updated: <span data-bind="text: ko.unwrap(lastUpdated) ? moment.utc(lastUpdated(), moment.ISO_8601).local().format('L h:mm a') : ''"></span></span>
    </div>
}

@section Styles {
    @Html.Raw(Styles.Render("~/bundles/content/datatables"))
    @Html.Raw(Styles.Render("~/bundles/select2css"))
}

@section Scripts{
    @Html.Raw(Scripts.Render("~/bundles/datatables"))
    @Html.Raw(Scripts.Render("~/bundles/select2"))
    @Html.Raw(Scripts.Render("~/bundles/knockout"))
	@Html.Raw(Scripts.Render("~/bundles/collar/edit"))

    <script>
        $(function () {
            wmis.collar.edit.initialize({
            	collarKey: @ViewBag.Key
            });
        });
    </script>
}

@section Dialogs {
    <div class="modal" id="assignProjectModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Assign Project</h4>
                </div>
                <div class="modal-body form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="hidden" name="selectedProject" id="selectedProject" class="form-control" data-bind="select2: projectOptions" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: cancelProjectSelection">Cancel</button>
                    <button type="button" class="btn btn-primary" data-bind="click: saveProjectSelection">Apply Changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}

<form role="form">
	<div class="row">
		<div class="col-md-12 text-right">
			<a href="/Collar/" class="btn btn-default">Cancel</a>
			<button type="submit" class="btn btn-primary" data-bind="click: saveCollar, enable: canSave">Save</button>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<ul class="nav nav-tabs" role="tablist">
				<li class="active"><a href="#general" role="tab" data-toggle="tab" class="colouredTab generalTab">General</a></li>
				<li><a href="#locations" role="tab" data-toggle="tab" class="colouredTab reproductionTab">Locations</a></li>
				<li><a href="#history" role="tab" data-toggle="tab" class="colouredTab distributionTab">History</a></li>
			</ul>

			<!-- Tab panes -->
			<div class="tab-content" style="margin-top:10px;">
                <div data-bind="with: collar" class="tab-pane form-horizontal active" id="general">
                    <div class="form-group">
                        <label for="name" class="col-md-1 control-label">Collar Id</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="name" data-bind="value: name">
                        </div>

                        <label for="subscriptionId" class="col-md-1 control-label">Subscription ID</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="subscriptionId" data-bind="value: subscriptionId">
                        </div>

                        <label for="vhfFrequency" class="col-md-1 control-label">VHR Frequency</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="vhfFrequency" data-bind="value: vhfFrequency">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="collarType" class="col-md-1 control-label">Collar Type</label>
                        <div class="col-md-3" data-bind="with: collarType">
                            <!-- ko if: $root.collarTypes().length > 0 -->
                            <select class="form-control" id="collarType" name="collarType" data-bind="options: $root.collarTypes, optionsText: 'name', optionsValue: 'key', optionsCaption: '', value: key, select2: { }"></select>
                            <!-- /ko -->
                        </div>

                        <label for="jobNumber" class="col-md-1 control-label">Job Number</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="jobNumber" data-bind="value: jobNumber">
                        </div>

                        <label for="collarModel" class="col-md-1 control-label">Collar Model</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control" id="collarModel" data-bind="value: model">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="collarStatus" class="col-md-1 control-label">Collar Status</label>
                        <div class="col-md-3" data-bind="with: collarStatus">
                            <!-- ko if: $root.collarStatuses().length > 0 -->
                            <select class="form-control" id="collarStatus" name="collarStatus" data-bind="options: $root.collarStatuses, optionsText: 'name', optionsValue: 'key', optionsCaption: '', value: key, select2: { }"></select>
                            <!-- /ko -->
                        </div>

                        <label for="collarMalfunction" class="col-md-1 control-label">Collar Malfunction</label>
                        <div class="col-md-3" data-bind="with: collarMalfunction">
                            <!-- ko if: $root.collarMalfunctions().length > 0 -->
                            <select class="form-control" id="collarMalfunction" name="collarMalfunction" data-bind="options: $root.collarMalfunctions, optionsText: 'name', optionsValue: 'key', optionsCaption: '', value: key, select2: { }"></select>
                            <!-- /ko -->
                        </div>

                        <label for="collarRegion" class="col-md-1 control-label">Region</label>
                        <div class="col-md-3" data-bind="with: collarRegion">
                            <!-- ko if: $root.collarRegions().length > 0 -->
                            <select class="form-control" id="collarRegion" name="collarRegion" data-bind="options: $root.collarRegions, optionsText: 'name', optionsValue: 'key', optionsCaption: '', value: key, select2: { }"></select>
                            <!-- /ko -->
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="collarState" class="col-md-1 control-label">Collar State</label>
                        <div class="col-md-3" data-bind="with: collarState">
                            <!-- ko if: $root.collarStates().length > 0 -->
                            <select class="form-control" id="collarState" name="collarState" data-bind="options: $root.collarStates, optionsText: 'name', optionsValue: 'key', optionsCaption: '', value: key, select2: { }"></select>
                            <!-- /ko -->
                        </div>

                        <label for="inactiveDate" class="col-md-1 control-label">Inactive Date</label>
                        <div class="col-md-3">
                            <input class="form-control" id="inactiveDate" type="date" data-bind="value: inactiveDate" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 h4">
                            <div class="row">
                                <div class="col-md-4">Animal</div>
                                <div class="col-md-8 text-right">
                                    <button class="btn btn-default" data-bind="click: $root.assignAnimal">Assign Animal</button>
                                </div>
                            </div>
                            <hr />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 h4">
                            <div class="row">
                                <div class="col-md-4">Project</div>
                                <div class="col-md-8 text-right">
                                    <button class="btn btn-default" data-bind="visible: !$root.project(), click: $root.assignProject">Assign Project</button>
                                    <button class="btn btn-default" data-bind="visible: $root.project, click: $root.assignProject">Assign New Project</button>
                                    <button class="btn btn-default" data-bind="visible: $root.project, click: $root.unassignProject">Unassign Project</button>
                                </div>
                            </div>
                            <hr />
                        </div>

                        <div class="form-group" data-bind="with: $root.project">
                            <div class="col-md-12">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <td>Project ID</td>
                                            <td>Name</td>
                                            <td>Lead Region</td>
                                            <td>Project Lead</td>
                                            <td>Status</td>
                                            <td>Status Date</td>
                                            <td>Start Date</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td data-bind="text: key"></td>
                                            <td data-bind="text: name"></td>
                                            <td data-bind="with: leadRegion">
                                                <!-- ko if: key != 0 -->
                                                <span data-bind="text: name"></span>
                                                <!-- /ko -->
                                            </td>
                                            <td data-bind="with: projectLead">
                                                <!-- ko if: key != 0 -->
                                                <span data-bind="text: name"></span>
                                                <!-- /ko -->
                                            </td>
                                            <td data-bind="with: status">
                                                <!-- ko if: key != 0 -->
                                                <span data-bind="text: name"></span>
                                                <!-- /ko -->
                                            </td>
                                            <td data-bind="dateText: statusDate"></td>
                                            <td data-bind="dateText: startDate"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="size" class="col-md-1 control-label">Collar Size</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="size" data-bind="value: size" />
                            </div>

                            <label for="beltingColour" class="col-md-1 control-label">Collar Belting Colour</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="beltingColour" data-bind="value: beltingColour" />
                            </div>

                            <label for="firmwareVersion" class="col-md-1 control-label">Firmware Version</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="firmwareVersion" data-bind="value: firmwareVersion" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="dropOffDate" class="col-md-2 control-label">Drop-off Date</label>
                            <div class="col-md-2">
                                <input class="form-control" id="dropOffDate" type="date" data-bind="value: dropOffDate" />
                            </div>

                            <label for="estimatedDropOff" class="col-md-2 control-label">Est. Dropoff</label>
                            <div class="col-md-2">
                                <input class="form-control" id="estimatedDropOff" type="date" data-bind="value: estimatedDropOff" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="estimatedGpsFailure" class="col-md-2 control-label">Est. GPS Failure</label>
                            <div class="col-md-2">
                                <input class="form-control" id="estimatedGpsFailure" type="date" data-bind="value: estimatedGpsFailure" />
                            </div>

                            <label for="estimatedGpsBatteryEnd" class="col-md-2 control-label">Est. GPS Battery End</label>
                            <div class="col-md-2">
                                <input class="form-control" id="estimatedGpsBatteryEnd" type="date" data-bind="value: estimatedGpsBatteryEnd" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="estimatedVhfFailure" class="col-md-2 control-label">Estimated VHF Failure</label>
                            <div class="col-md-2">
                                <input class="form-control" id="estimatedVhfFailure" type="date" data-bind="value: estimatedVhfFailure" />
                            </div>

                            <label for="estimatedVhfBatteryEnd" class="col-md-2 control-label">Est. VHF Battery End</label>
                            <div class="col-md-2">
                                <input class="form-control" id="estimatedVhfBatteryEnd" type="date" data-bind="value: estimatedVhfBatteryEnd" />
                            </div>
                        </div>
                    </div>


                </div>
				
				<div class="tab-pane form-horizontal" id="locations">
					
				</div>
				
				<div id="history" class="tab-pane form-horizontal">
                    <div class="col-md-12">
                        <table id="collarHistory" class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Action</th>
                                    <th>Comment</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
				</div>
				
			</div>
		</div>
	</div>
</form>