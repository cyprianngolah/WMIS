                                placeholder="Pick Date">
                </el-date-picker>
            </div>

            <label class="col-lg-2 col-form-label text-lg-end">Deployment Herd</label>
            <div class="col-lg-4">
                <base-input disabled readonly v-model="form.deploymentHerd" id="deploymentHerd"></base-input>
            </div>
        </div>
    </div>
</div>







