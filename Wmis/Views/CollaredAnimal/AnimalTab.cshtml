            <div class="col-lg-4">
                <el-select disabled readonly class="w-100" v-model="form.herdPopulation.key">
                    <el-option :value="0" label="Select Herd Population" disabled></el-option>
                    <el-option v-for="item in herdPopulations"
                               :key="item.key"
                               :label="item.name"
                               :value="item.key">
                    </el-option>
                </el-select>
            </div>

            <label class="col-lg-2 col-form-label text-lg-end">Confidence</label>
            <div class="col-lg-4">
                <el-select class="w-100" disabled readonly v-model="form.herdAssociationConfidenceLevel.key">
                    <el-option :value="0" label="Select Conf. Level" disabled></el-option>
                    <el-option v-for="item in confidenceLevels"
                               :key="item.key"
                               :label="item.name"
                               :value="item.key">
                    </el-option>
                </el-select>
            </div>

            <label class="col-lg-2 col-form-label text-lg-end">Method</label>
            <div class="col-lg-4">
                <el-select class="w-100" v-model="form.herdAssociationMethod.key" disabled readonly>
                    <el-option :value="0" label="Select Herd Association" disabled></el-option>
                    <el-option v-for="item in herdAssociationMethods"
                               :key="item.key"
                               :label="item.name"
                               :value="item.key">
                    </el-option>
                </el-select>
            </div>

            <label class="col-lg-2 col-form-label text-lg-end">Effective Date</label>
            <div class="col-lg-4">
                <el-date-picker v-model="form.herdAssociationDate"
