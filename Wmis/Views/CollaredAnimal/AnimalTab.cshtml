<div class="card shadow-0 border border-1 mb-3">
    <div class="card-body">
        <div class="row mb-3 gy-lg-2">
            <label class="col-lg-2 col-form-label text-lg-end">Target Species</label>
            <div class="col-lg-4">
                <base-species-select v-model="form.speciesId"></base-species-select>
            </div>

            <label class="col-lg-2 col-form-label text-lg-end">Animal Status</label>
            <div class="col-lg-4">
                <el-select class="w-100" v-model="form.animalStatus.key">
                    <el-option :value="0" label="Select Status" disabled></el-option>
                    <el-option v-for="item in animalStatuses"
                               :key="item.key"
                               :label="item.name"
                               :value="item.key">
                    </el-option>
                </el-select>
            </div>
        </div>


        <div class="row gy-lg-2 mb-3 d-flex align-items-center">
            <label class="col-lg-2 col-form-label text-lg-end">Animal ID</label>
            <div class="col-lg-4">
                <base-input v-model="form.animalId" id="animalId"></base-input>
            </div>

            <label class="col-md-2 text-end">Year of Birth</label>
            <div class="col-lg-4">
                <base-input v-model="form.estimatedYearOfBirth" id="estimatedYearOfBirth"></base-input>
            </div>
        </div>

        <div class="row  gy-lg-2 mb-3 d-flex align-items-center">
            <label class="col-lg-2 col-form-label text-lg-end">Age Class</label>
            <div class="col-lg-4">
                <el-select class="w-100" v-model="form.ageClass.key" placeholder="Select">
                    <el-option :value="0" label="Select Age Class" disabled></el-option>
                    <el-option v-for="item in ageClasses"
                               :key="item.key"
                               :label="item.name"
                               :value="item.key">
                    </el-option>
                </el-select>
            </div>

            <label class="col-lg-2 col-form-label text-lg-end">Year of Birth Method</label>
            <div class="col-lg-4">
                <base-input v-model="form.estimatedBirthYearMethod" id="estimatedBirthYearMethod"></base-input>
            </div>
        </div>


        <div class="row gy-lg-2 mb-3 d-flex align-items-center">
            <label class="col-lg-2 col-form-label text-lg-end">Sex</label>
            <div class="col-lg-4">
                <el-select class="w-100" v-model="form.animalSex.key" placeholder="Select">
                    <el-option :value="0" label="Select Animal Sex" disabled></el-option>
                    <el-option v-for="item in animalSexes"
                               :key="item.key"
                               :label="item.name"
                               :value="item.key">
                    </el-option>
                </el-select>
            </div>

            <label class="col-lg-2 col-form-label text-lg-end">Year of Birth By</label>
            <div class="col-lg-4">
                <base-input v-model="form.estimatedYearOfBirthBy" id="estimatedYearOfBirthBy"></base-input>
            </div>
        </div>

    </div>
</div>


