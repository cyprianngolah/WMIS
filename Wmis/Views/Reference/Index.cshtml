@using Wmis.Extensions
@{
    ViewBag.Title = "References";
}

@section Styles {
    @Html.Raw(Styles.Render("~/bundles/datatablescss"))
    @Html.Raw(Styles.Render("~/bundles/select2css"))
}

@section Scripts {
    @Html.Raw(Scripts.Render("~/bundles/datatables"))
    @Html.Raw(Scripts.Render("~/bundles/select2"))
    @Html.Raw(Scripts.Render("~/bundles/reference/index"))
}

<div class="row my-3">
    <div class="col-md-12 d-flex justify-content-end">

        <div>
            @if (Html.UserIsBiodiversityAdministrator())
            {
                <a href="/Reference/New" class="btn btn-success btn-sm me-2">New</a>
            }
            <a v-bind:href=`/Reference/Edit/${selectedKey}` id="editButton" class="btn btn-primary btn-sm me-2" v-bind:class="{'disabled' : !isSelected}">
                View
            </a>
        </div>
    </div>
</div>

<div class="card bg-light">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-4">
                <label class="form-label visually-hiddenx">Year</label>
                <select class="form-select" aria-label="Year" id="year">
                    <option value="">Year</option>
                </select>
            </div>

            <div class="col">
                <label class="form-label visually-hiddenx">Keywords</label>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="" id="keyword" v-model="form.keywords">
                    <button id="searchbtn" class="btn btn-info" type="button">Search</button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <table id="references" class="table table-sm table-striped table-hover w-100">
            <thead>
                <tr>
                    <th>Key</th>
                    <th>Code</th>
                    <th>Author</th>
                    <th>Year</th>
                    <th>Title</th>
                    <th>Edition Publication Organization</th>
                    <th>Volume Page</th>
                    <th>Publisher</th>
                    <th>City</th>
                    <th>Location</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

