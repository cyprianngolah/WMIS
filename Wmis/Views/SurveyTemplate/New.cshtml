@{
	ViewBag.Title = "Survey Template";
	ViewBag.SubTitle = "New";
}

@section Scripts {
	@Html.Raw(Scripts.Render("~/bundles/knockout"))
	@Html.Raw(Scripts.Render("~/bundles/surveytemplate/new"))

	<script type="text/javascript">
		$(function() {
			wmis.surveytemplate.new.initialize();
		});
	</script>
}


<div class="col-md-12 form-horizontal ">
    <form role="form">
        <div class="form-group">
            <label class="col-md-2 control-label" for="templateName">Template Name</label>
            <div class="col-md-4">
                <input type="text" class="form-control" id="templateName" data-bind="value: name, valueUpdate: 'keyup'">
            </div>
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-primary" data-bind="click: saveSurveyTemplate, enabled: canSave">Save</button>
            <a href="/SurveyTemplate" class="btn btn-default">Cancel</a>
        </div>
    </form>
</div>