@using Wmis.Extensions
@{
    ViewBag.Title = "Survey Templates";
}

@section Styles {
    @Html.Raw(Styles.Render("~/bundles/datatablescss"))
}

@section Scripts {
    @Html.Raw(Scripts.Render("~/bundles/datatables"))
    @Html.Raw(Scripts.Render("~/bundles/components/base"))
    @Html.Raw(Scripts.Render("~/bundles/surveytemplate/index"))
}

<div class="row my-3">
    <div class="col-md-12 d-flex justify-content-end">
        @if (Html.UserIsProjectAdministrator())
        {
            <base-button color="success" v-on:click="newTemplateModal.show()">New</base-button>
        }
        <a v-bind:href=`/SurveyTemplate/Edit/${selectedKey}` id="editButton" class="el-button el-button--primary btn" v-bind:class="{'disabled' : !isSelected}">
            @if (Html.UserIsProjectAdministrator())
            {
                <span>View</span>
            }
            else
            {
                <span>View</span>
            }
        </a>
    </div>
</div>

<div class="card bg-light">
    <div class="card-body">
        <div class="row g-3 d-flex align-items-center">
            <div class="col">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Keyword" id="keyword" v-model="form.keywords">
                    <button id="searchbtn" class="btn btn-info" type="button">Search</button>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-md-12">
        <table id="templateTable" class="table table-sm w-100">
            <thead>
                <tr>
                    <th>Survey Template Name</th>
                    <th># of projects used in</th>
                    <th>Created By</th>
                    <th>Date Created</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


<!-- New Collar Modal -->
<div class="modal fade" id="newTemplateModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Survey Template</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card border-0">
                    <div class="row g-3">
                        <div class="col-12">
                            <lable>Name</lable>
                            <base-input v-model="newTemplateForm.name" label="Name"></base-input>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <base-button color="danger" plain data-bs-dismiss="modal">Cancel</base-button>
                <base-button color="success" :disabled="disableCreate" v-on:click="handleCreateTemplate()">
                    Save
                </base-button>
            </div>
        </div>
    </div>
</div>
