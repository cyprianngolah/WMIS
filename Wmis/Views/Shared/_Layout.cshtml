@using Wmis.Extensions
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>WMIS</title>
		@Styles.Render("~/bundles/css")
		@RenderSection("Styles", false)
	</head>
	<body>
		<div class="container-fluid">
			<div class="row clearfix">
				<div class="navbar navbar-inverse navbar-fixed-top">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						@Html.ActionLink("WMIS", "Index", "Home", null, new { @class = "navbar-brand" })
					</div>
					<div class="navbar-collapse collapse">
						<ul class="nav navbar-nav">
							<li>@Html.MenuLink("Biodiversity", "Index", "BioDiversity")</li>
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<span class="caret"></span></a>
								<ul class="dropdown-menu" role="menu">
									<li>@Html.MenuLink("Taxonomies", "Index", "Taxonomy")</li>
									<li>@Html.MenuLink("Ecozones", "Index", "Ecozone")</li>
									<li>@Html.MenuLink("Ecoregions", "Index", "Ecoregion")</li>
                                    <li>@Html.MenuLink("Protected Areas", "Index", "ProtectedArea")</li>
                                    <li>@Html.MenuLink("Ranks", "Index", "StatusRank")</li>
									<li>@Html.MenuLink("COSEWIC Status", "Index", "CosewicStatus")</li>
									<li>@Html.MenuLink("References", "Index", "Reference")</li>
									@*<li class="divider"></li>*@
								</ul>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<div class="container" style="padding-bottom:30px;">
			<div class="row clearfix">
				@if (!string.IsNullOrEmpty(ViewBag.Title))
				{
					<div class="page-header">

						<div class="h1 pull-left" style="margin:0;">
							@ViewBag.Title @if (!string.IsNullOrEmpty(@ViewBag.SubTitle))
							{<small>@Html.Raw(ViewBag.SubTitle)</small>}
						</div>

						@RenderSection("TopRight", false)

						<div style="clear:both;"></div>
					</div>
				}
			</div>

		    <div class="row clearfix">
		        <div class="col-md-12">
		            @RenderBody()
		        </div>
		    </div>
            
            @RenderSection("Dialogs", false)
		</div>

		<div class="container-fluid">
			<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation" style="min-height: 0;">
				@*<hr style="margin-top: 5px; margin-bottom: 5px;" />*@
				<p style="margin:10px;">&copy; @DateTime.Now.Year - WMIS</p>
			</nav>
		</div>
		
		<div class="modal" id="waitingModal" tabindex="-1" role="dialog" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					@*<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
						<h4 class="modal-title">Modal title</h4>
					</div>*@
					<div class="modal-body">
						<p>One fine body&hellip;</p>
					</div>
					@*<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary">Save changes</button>
					</div>*@
				</div><!-- /.modal-content -->
			</div><!-- /.modal-dialog -->
		</div><!-- /.modal -->
	    
		@RenderSection("Templates", false)    
		@Scripts.Render("~/bundles/base")
		@RenderSection("Scripts", false)
	</body>
</html>
