<script id="editHistoryCommentTemplate" type="text/html">
    <div class="modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Modify Comment</h4>
                </div>
                <div class="modal-body form-horizontal">
                    <div class="form-group">
                        <label class="col-md-2" for="item">Item</label>
                        <div class="col-md-10">
                            <input type="text" disabled class="form-control" id="item" data-bind="value: item" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2" for="value">Value</label>
                        <div class="col-md-10">
                            <input type="text" disabled class="form-control" id="value" data-bind="value: value" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2" for="action">Date</label>
                        <div class="col-md-10">
                            <input type="text" disabled class="form-control" id="action" data-bind="dateText: changeDate, format: 'L h:mm a'" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2" for="action">Comment</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" id="action" data-bind="value: comment" />
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: cancel">Cancel</button>
                    <button type="button" class="btn btn-primary" data-bind="click: save">Apply Changes</button>
                </div>
            </div> <!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</script>

<script id="historyManagementTemplate" type="text/html">
    <div class="row">
        <label for="historyFilter" class="control-label col-md-1">Filter</label>
        <div class="col-md-2" style="text-align: left">
            <select class="form-control" id="historyFilter" name="historyFilter" data-bind="options: historyFilterOptions, value: historyOptionSelection"></select>
        </div>
    </div>
    <div class="col-md-12">
        <table id="historyLogTable" class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Item</th>
                    <th>Value</th>
                    <th>User</th>
                    <th>Comment</th>
                    <th>Edit Comment</th>
                </tr>
            </thead>
        </table>
    </div>
</script>