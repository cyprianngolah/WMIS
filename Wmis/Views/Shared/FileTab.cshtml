
<div class="col-md-12 " id="fileTabTemplate">
    <div class="form-group">
        <div class="col-md-12 text-end">
            <base-button size="mini" v-on:click="showCreateModal()" type="button">Add Link</base-button>
        </div>
    </div>
    <table id="fileTable" class="table w-100 table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Path</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>

</div>


<!-- Modal to create and Edit fileInputModal -->

<div class="modal fade" id="fileInputModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ isEditing ? 'Edit Link' : 'Add Link' }}</h5>
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-12">
                        <base-input v-model="form.name" label="Name"></base-input>
                    </div>
                    <div class="col-12">
                        <base-input v-model="form.path" label="Path"></base-input>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-white">
                <button type="button" class="btn btn-secondary" v-on:click="resetForm()" data-mdb-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" v-bind:class="{'disabled' : !canSave }" v-on:click="isEditing ? handleUpdate() : handleCreate()">
                    {{ isEditing ? 'Apply Changes' : 'Save' }}
                </button>
            </div>
        </div>
    </div>
</div>