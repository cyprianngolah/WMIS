@{
    ViewBag.Title = "Taxonomy";
	ViewBag.SubTitle = "Edit";
}

@section Scripts {
	@Html.Raw(Scripts.Render("~/bundles/knockout"))
	@Html.Raw(Scripts.Render("~/bundles/taxonomy/edit"))

	<script type="text/javascript">
		$(function() {
			wmis.taxonomy.edit.initialize();
		});
	</script>
}
<div class="col-md-6">
	<form role="form">
		<input type="hidden" id="taxonomyKey" value="@ViewBag.Key" />
		<div class="form-group">
			<label for="taxonomyGroup">Taxonomy Group</label>
			<select class="form-control" id="taxonomyGroup" name="taxonomyGroup"
			        data-bind='options: taxonomyGroups, optionsText: "name", optionsValue: "key", value: taxonomyGroupKey'></select>
		</div>
		<div class="form-group">
			<label for="taxonomy">Taxonomy</label>
			<input type="text" class="form-control" id="taxonomy" name="taxonomy" data-bind="value: taxonomy">
		</div>
		<div class="text-right">
			<button type="submit" class="btn btn-primary" data-bind="click: saveTaxonomy">Save</button>
			<a href="/Taxonomy/Index" class="btn btn-default">Cancel</a>
		</div>
	</form>
</div>