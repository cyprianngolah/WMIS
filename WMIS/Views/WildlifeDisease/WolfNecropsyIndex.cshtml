

@using Wmis.Extensions
@{
    ViewBag.Title = "Wolf Necropsy";
}

@section Styles {
    @Html.Raw(Styles.Render("~/bundles/content/datatables"))
    @Html.Raw(Styles.Render("~/bundles/select2css"))
}

@section Scripts {
    @Html.Raw(Scripts.Render("~/bundles/datatables"))
    @Html.Raw(Scripts.Render("~/bundles/select2"))
    @Html.Raw(Scripts.Render("~/bundles/WildlifeDisease/WolfNecropsyIndex"))
 
<script type="text/javascript">
    $(function () {
       wmis.wildlifeDisease.wolfnecropsyindex.initialize({
          /*  $newButton: $("#newButton"),
            $editButton: $("#editButton"),

            $necropsyID: $("#necropsyID"),
            $species: $("#name"),
            $location: $("#location"),
            $keywords: $("#keywords"),
            $searchButton: $("#searchButton"), */

            $table: $("#WolfNecropsies")
        });
    });
</script>
}

<div class="row">
    <div class="col-md-12 text-right">

        @if (Html.UserIsWildlifeDiseaseAdministrator())
        {
            <a href="~/Project/New" id="newButton" class="btn btn-default" style="margin-bottom: 10px;">New</a>
        }
        <a href="~/Project/Edit" id="editButton" class="btn btn-default disabled" style="margin-bottom: 10px;">
            @if (Html.UserIsWildlifeDiseaseAdministrator())
            {
                <span>View</span>
            }
            else
            {
                <span>View</span>
            }
        </a>

        <button id="downloadButton" class="btn btn-default" style="margin-bottom: 10px;">Download</button>
    </div>
</div>

<div class="well" style="margin-bottom: 0;">
    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal center" role="form">
                <div class="col-md-3">
                    <div class="form-group" style="padding-bottom: 5px; padding-top: 5px; margin-bottom: 0;">
                        <label class="sr-only" for="projectLead">NecropsyID</label>
                        <select class="form-control" id="projectLead" name="projectLead">
                            <option value="">NecropsyID</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group" style="padding-bottom: 5px; padding-top: 5px; margin-bottom: 0;">
                        <label class="sr-only" for="projectStatus">Name</label>
                        <select class="form-control" id="projectStatus" name="projectStatus">
                            <option value="">Name</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group" style="padding-bottom: 5px; padding-top: 5px; margin-bottom: 0;">
                        <label class="sr-only" for="region">Location</label>
                        <select class="form-control" id="region" name="region">
                            <option value="">Location</option>
                        </select>
                    </div>
                </div>

       
                <label class="sr-only" for="keywords">Keywords</label>
                <div class="col-md-3">
                    <div class="form-group" style="padding-bottom: 5px; padding-top: 5px; margin-bottom: 0;">
                        <div class="input-group">
                            <input type="text" id="keywords" class="form-control" placeholder="Keywords" />
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button" id="searchButton">Search</button>
                            </span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <table id="WolfNecropsies" class="table table-striped table-condensed table-hover">
            <thead>
                <tr>
                    <th>NecropsyID</th>
                    <th>NecropsyDate</th>
                    <th>Species</th>
                    <th>Location</th>
                    <th>GeneralComments</th>
                    <th>Submitter</th>
                </tr>
            </thead>
        </table>
    </div>
</div>